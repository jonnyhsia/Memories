<resources>

    <style name="CompatAppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>
        <item name="android:windowBackground">@color/windowBackgroundColor</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:fontFamily">@font/noto_sans_medium</item>
        <item name="android:includeFontPadding">false</item>

        <item name="android:ambientShadowAlpha">@dimen/ambientShadowAlpha</item>
        <item name="android:spotShadowAlpha">@dimen/spotShadowAlpha</item>
    </style>

    <style name="CompatAppTheme.Common"></style>

    <style name="BottomTab">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">9sp</item>
        <item name="android:drawablePadding">-2dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="android:textAlignment">center</item>
        <item name="android:background">@drawable/ripple_nav_item</item>
        <!--<item name="android:gravity">center</item>-->
        <item name="android:textColor">@color/black87</item>
    </style>

    <style name="CompatAppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />

    <style name="CompatAppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Dark" />

    <style name="AccountTabText" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">18sp</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/product_sans</item>
    </style>

    <style name="AboutLabel">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clickable">true</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:focusable">true</item>
        <item name="android:background">?android:selectableItemBackground</item>
    </style>

</resources>
