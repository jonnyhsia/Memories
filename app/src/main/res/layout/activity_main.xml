<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".page.main.MainActivity">

    <FrameLayout
        android:id="@+id/fragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="52dp" />

    <com.arch.jonnyhsia.ui.navigation.BottomNavigationBar
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_gravity="bottom"
        android:background="@drawable/bg_bottom_navigation"
        android:elevation="8dp"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        app:x_defaultTab="0">

        <!--TODO: 图标需要修改, 不够直白-->

        <com.arch.jonnyhsia.ui.navigation.BottomTab
            style="@style/BottomTab"
            android:text="时间线"
            app:x_drawableTop="@drawable/ic_nav_timeline" />

        <com.arch.jonnyhsia.ui.navigation.BottomTab
            style="@style/BottomTab"
            android:text="讨论"
            app:x_drawableTop="@drawable/ic_nav_discuss" />

        <com.arch.jonnyhsia.ui.navigation.BottomTab
            style="@style/BottomTab"
            android:text="消息"
            app:x_drawableTop="@drawable/ic_nav_msg" />

        <com.arch.jonnyhsia.ui.navigation.BottomTab
            style="@style/BottomTab"
            android:text="我"
            app:x_drawableTop="@drawable/ic_nav_account" />

    </com.arch.jonnyhsia.ui.navigation.BottomNavigationBar>

</FrameLayout>